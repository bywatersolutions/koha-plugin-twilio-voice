      "operationId":"AsyncAmdStatusCallback",
      "tags":[
        "messages"
      ],
      "parameters":[
        {
          "name":"message_id",
          "in":"path",
          "description":"Internal patron message identifier",
          "required":true,
          "type":"integer"
        },
        {
          "name":"CallSid",
